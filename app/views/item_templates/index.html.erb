<article>
  <header>
    All items
  </header>

  <ul>
    <% @list_of_items.each do |an_item| %>
      <li>
        <% if an_item.image_url.present? %>
          <img src="<%= an_item.image_url %>" width="60">
        <% end %>

        <strong><%= an_item.title %></strong>

        <% if an_item.price.present? %>
           <%= an_item.price %> <%= an_item.currency %>
        <% end %>

        <a href="<%= an_item.url %>">Open link</a>
      </li>
    <% end %>
  </ul>
</article>

<article>
  <header>
    Add a new item
  </header>

  <form action="/insert_item" method="post">
    <div>
      <label for="title_box">Title</label>
      <input id="title_box" type="text" name="query_title">
    </div>

    <div>
      <label for="url_box">URL</label>
      <input id="url_box" type="text" name="query_url">
    </div>

    <div>
      <label for="price_box">Price</label>
      <input id="price_box" type="text" name="query_price">
    </div>

    <div>
      <label for="currency_box">Currency</label>
      <input id="currency_box" type="text" name="query_currency" value="USD">
    </div>

    <div>
      <label for="image_box">Image URL</label>
      <input id="image_box" type="text" name="query_image_url">
    </div>

    <div>
      <label for="notes_box">Notes</label>
      <textarea id="notes_box" name="query_notes"></textarea>
    </div>

    <button>Create item</button>
  </form>
</article>
